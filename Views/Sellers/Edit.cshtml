@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />

<div class="row">
    <div class="cold-md-6">
        <form asp-action="Edit">

            <input asp-for="Seller.Id" type="hidden"/>

            <div class="form-group">
                <input asp-for="Seller.Nome" class="form-control" placeholder="Name" />
                <span asp-validation-for="Seller.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Seller.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Seller.BirthDate" class="form-control" placeholder="Birthdate" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="Salary" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Seller.Department.Id"/>
                <input type="hidden" asp-for="Seller.Department.Name"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
